PREFIX="@PREFIX@"
if [ "`echo $PREFIX|cut -b 1`" = "@" ]; then
    PREFIX="."
fi

for BASEDIR in /usr/local/bin /usr/bin; do
    for VERSION in "" 2.6 2.5; do
        PYTHON=$BASEDIR/python$VERSION
        if [ -x $PYTHON ]; then
            $PYTHON $PREFIX/bin/neubot start
            exit $?
        fi
    done
done
