import logging
import sys
import time

LOG_FORMAT = "<%(levelname)s> %(message)s"

sys.path.insert(0, ".")
try:
    import neubot
except ImportError:
    logging.error("Could not import NPL (Neubot Python Library)")
    raise

def startup():
    logger = logging.getLogger()
    handler = logging.StreamHandler()
    formatter = logging.Formatter(LOG_FORMAT)
    handler.setFormatter(formatter)
    logger.addHandler(handler)
    logger.setLevel(logging.DEBUG)
    configuration = {}
    configuration["server"] = "http://master.neubot.org:9773"
    sleeptime = 60
    poller = neubot.network.poller()
    while (True):
        try:
            uri = configuration["server"]
            logging.info("Starting rendez-vous")
            (scheme, address, port, pathquery) = neubot.http.urlsplit(uri)
            neubot.simpleclient(poller, scheme, address, port)
            poller.loop()
        except Exception:
            logging.error("Rendez-vous failed")
            neubot.prettyprint_exception()
        logging.info("Now going to sleep for %d secs" % sleeptime)
        time.sleep(sleeptime)

if (__name__ == "__main__"):
    startup()
