import ConfigParser
import os
import sys
import traceback

conflist = [
	"/etc/neubot",
	os.environ["HOME"] + "/" + ".neubot",
]

parser = ConfigParser.RawConfigParser()
parser.add_section("neubot")
parser.set("neubot", "basedir", "/usr/share")
for conffile in conflist:
	parser.read(conffile)
basedir = parser.get("neubot", "basedir")
sys.path.insert(0, basedir)
parser = None

try:
	import neubot
except ImportError:
	sys.stderr.write("error: could not import neubot\n")
	sys.stderr.write(traceback.format_exc())
	sys.exit(1)

neubot.unixmain(sys.argv[1:])
