# along with Neubot.  If not, see <http://www.gnu.org/licenses/>.
#

#
# Publish releases
#

. $HOME/.neubot-publish

if [ -z "$remotedir" -o -z "$scp" -o -z "$server" -o -z "$ssh" ]; then
    echo "error: invalid $HOME/.neubot-publish file" 2>&1
    exit 1
fi

candidate=0
dry=0
remote=$server:$remotedir
stable=0

args=$(getopt nRr $*) || {
    echo "usage: $0 [-nRr] location" 1>&2
    exit 1
}
set -- $args
while [ $# -gt 0 ]; do
    if [ "$1" = "-n" ]; then
        ssh='echo ssh'
        dry=1
        shift
    elif [ "$1" = "-R" ]; then
        stable=1
        shift
    elif [ "$1" = "-r" ]; then
        candidate=1
        shift
    elif [ "$1" = "--" ]; then
        shift
        break
    fi
done
if [ $# -ne 1 ]; then
    echo "error: missing location" 1>&2
    echo "usage: $0 [-nRr] location" 1>&2
    exit 1
fi

#
# Wrapper for scp such that we publish packages
# with the right permissions.
#
doscp()
{
    [ $# -eq 2 ] || {
        echo 'usage: doscp source dest' 2>&1
        exit 1
    }
    if [ $dry = 0 ]; then
        chmod 644 $1
        $scp $1 $2
    else
        echo "scp $1 $2"
    fi
}

#
# If we have a MacOSX release, publish it
#
if [ -f $1/macos/0.004012006.tar.gz ]; then
    doscp $1/neubot-0.4.12-rc6.pkg.tgz $remote/_packages/

    $ssh $server "install -d $remotedir/updates/macos/"
    for ext in "" .sha256 .sig; do
        doscp $1/macos/0.004012006.tar.gz$ext $remote/updates/macos/
    done

    if [ $candidate = 1 ]; then
        $ssh $server "echo 0.004012006 > $remotedir/updates/macos/testing"
    fi

    #
    # The default channel name is `latest` and it tracks
    # stable releases.
    #
    if [ $stable = 1 ]; then
        $ssh $server "echo 0.004012006 > $remotedir/updates/macos/latest"
    fi

fi

#
# If we have a Win32 release, publish it
#
if [ -f $1/win32/neubot-0.4.12-rc6-setup.exe ]; then

    doscp $1/win32/neubot-0.4.12-rc6-setup.exe $remote/_packages/

    # Autoupdates stuff
    $ssh $server "install -d $remotedir/updates/win32/"
    doscp $1/win32/0.004012006.tar.gz $remote/updates/win32
    doscp $1/win32/0.004012006.tar.gz.sha256 $remote/updates/win32

    if [ $candidate = 1 ]; then
        $ssh $server "echo 0.004012006 > $remotedir/updates/win32/testing"
    fi

    #
    # The default channel name is `latest` and it tracks
    # stable releases.
    #
    if [ $stable = 1 ]; then
        $ssh $server "echo 0.004012006 > $remotedir/updates/win32/latest"
    fi

fi

#
# If we have a source release, publish it
#
if [ -f $1/neubot-0.4.12-rc6.tar.gz ]; then

    for ext in .tar.gz .zip; do
        doscp $1/neubot-0.4.12-rc6$ext $remote/_packages/
    done

fi

#
# If we have a Debian release, publish it
#
if [ -f $1/neubot-0.4.12-rc6-1_all.deb ]; then

    for pkg in neubot neubot-nox; do
        doscp $1/$pkg-0.4.12-rc6-1_all.deb $remote/_packages/
    done

    if [ $candidate = 1 ]; then
        for pkg in neubot-0.4.12-rc6 neubot-nox-0.4.12-rc6; do
            $ssh $server ln -f $remotedir/_packages/$pkg-1_all.deb $remotedir/rc
        done
        doscp $1/Release $remote/rc/
        doscp $1/Release.gpg $remote/rc/
        doscp $1/Packages $remote/rc/
        doscp $1/Packages.gz $remote/rc/
    fi

    if [ $stable = 1 ]; then
        for pkg in neubot-0.4.12-rc6 neubot-nox-0.4.12-rc6; do
            $ssh $server ln -f $remotedir/_packages/$pkg-1_all.deb $remotedir
        done
        doscp $1/Release $remote/
        doscp $1/Release.gpg $remote/
        doscp $1/Packages $remote/
        doscp $1/Packages.gz $remote/
    fi

fi
